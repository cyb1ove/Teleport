{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./dist/",
    "target": "ES2015",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  // "ts-node": {
  //   "compilerOptions": {
  //     "target": "es5"
  //   }
  // }
  "include": [
    "./src/**/*",
    "./index.tsx",
    "webpack.config.ts"
  ],
}
